@model CustomerManageSystemAFC.Models.Customer

@{
    ViewBag.Title = "Add New Customer";
}

<div class="jumbotron">
    <center>
        <h1>Customer Registration</h1>
        <h3>Add New Customer</h3>
    </center>
</div>

@*Grid View*@
<div class="col-sm-12 col-md-12 col-xs-12">

    <div class="col-sm-12 col-md-12 col-xs-12">
        <a href="@Url.Action("getAll", "Home")" class="btn btn-default btn-width">View Customer</a>
    </div>
    <br />
    <br />
    <br />
    @using (Html.BeginForm("addOrUpdateCustomer", "Home", FormMethod.Post))
    {

       <div class="form-horizontal" > 
    @Html.HiddenFor(m => m.customerID)
        @*fName*@
        <div class="form-group">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.FName)
                </div>
                <div class="col-sm-9 col-md-9 ">
                    @Html.TextBoxFor(model => model.FName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @*lName*@
        <div class="form-group">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.LName)
                </div>
                <div class="col-sm-9 col-md-9 ">
                    @Html.TextBoxFor(model => model.LName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @*nic*@
        <div class="form-group">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.NIC)
                </div>
                <div class="col-sm-9 col-md-9 ">
                    @Html.TextBoxFor(model => model.NIC, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NIC, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @*email*@
        <div class="form-group">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.Email)
                </div>
                <div class="col-sm-9 col-md-9 ">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @*mobileNo*@
        <div class="form-group">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.MobileNo)
                </div>
                <div class="col-sm-9 col-md-9 ">
                    @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @*bDay*@
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.Birthday)
                </div>
                <div class="col-sm-9 col-md-9 ">
                    @Html.TextBoxFor(model => model.Birthday, new { @type = "date", @class = "form-control datepicker", @Value = Model.Birthday.ToString("yyyy-MM-dd") })
                    @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        @*address*@
        <div class="form-group">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.Address)
                </div>
                <div class="col-sm-9 col-md-9 ">
                    @Html.TextAreaFor(model => model.Address, 3, 0, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-xs-12">
            <br />
            <br />
            <br />
            <button style="display:none" type="submit" id="idSave" value="save" class="btn btn-primary btn-group-sm">SAVE</button>
            <button type="button"  class="btn btn-primary" onclick="Save(this)">SAVE</button>
            <a href="@Url.Action("addNewCustomer", "Home")" class="btn btn-default btn-width">CLEAR</a>
        </div></div>
    }
</div>





<script src="~/Content/JS/addNewCustomer.js"></script>